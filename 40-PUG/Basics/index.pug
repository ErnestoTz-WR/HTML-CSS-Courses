doctype html

block variables
    - var myClasses = ["class1", "class2", "class3"]
    - var myStyles = { "color": 'red', "background-color": "blue", "font-size": "14px" }
    - var myAttribute = { "src": '../icons/Icon-Clock.png', "alt": "icon picture" }
    - var numbers = [34,45,63,56,88]
    - var ppl = {"John": 86, "Paul": 24}
    - var user = {name: "Ernesto", loggedIn: false, lastLogin: 6}

html
    head 
    body 
        h1 Welcome to PUG
        p Hi there
        div(class=myClasses)
        p(style=myStyles) New paragraph
        img&attributes(myAttribute)
        each n,i in numbers
            p= "index: "+ i +" -> number: "+ n
        else
            p No values found
        for value,index in ppl
            p= "Name: "+ index +", age: "+ value
        else
            p No values found

        if user.loggedIn
            p 
                | Welcome back, 
                strong= user.name
        else if user.lastLogin < 10
            p Your last login was #{ user.lastLogin } minutes ago
            p
                a(href="#") Log In again
        else 
            a(href="#") Log in